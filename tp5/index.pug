extends layout
block content
    .w3-container
        .w3-card-4
            header.w3-container.w3-teal
                h3 Nova Tarefa
            .w3-container
                form.w3-container(action='/aluno' method='POST')
                    label.w3-teal
                        b Designação
                    input.w3-input.w3-border.w3-light-grey(type='text' name='designacao')
                    label.w3-teal
                        b Data Limite
                    input.w3-input.w3-border.w3-light-grey(type='text' name='datalimite')
                    input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
            br
        .w3-card-4
            header.w3-container.w3-teal
                h3 Lista de Tarefas
            .w3-container
                table.w3-table-all
                    tr
                        th Designacao
                        th Data Limite
                    each t in lista
                        tr
                            td= t.designacao
                            td= t.datalimite
            footer.w3-container.w3-teal
                address Gerado por Gestão de Tarefas - Diogo Silva