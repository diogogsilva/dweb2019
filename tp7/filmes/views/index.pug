extends layout
block content
    .w3-container.w3-black
      h1.w3-center Gestão de Filmes
      .w3-card-4
        header.w3-container.w3-teal
          h2 Adicionar Filme
            .w3-container
              form.w3-container(action='/filmes' method='POST')
                  label.w3-teal
                    b Title
                  input.w3-input.w3-border.w3-light-grey(type='text' name='title')
                  label.w3-teal
                    b Year
                  input.w3-input.w3-border.w3-light-grey(type='text' name='year')
                  label.w3-teal
                    b Cast
                  input.w3-input.w3-border.w3-light-grey(type='text' name='cast')
                  label.w3-teal
                    b Genres
                  input.w3-input.w3-border.w3-light-grey(type='text' name='genres')
                  input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
        .w3-card-4
            table.w3-table
                tr
                    th Title
                    th Year
                    th Operações
                each i in lista
                    tr
                        td= i.title
                        td= i.year
                        td
                            button.w3-button.w3-teal(onclick="location.href='http://localhost:3000/filmes/" + i._id + "'") Editar
                            button.w3-button.w3-teal(onclick="apagaFilme('" + i._id + "')") Apagar
            footer.w3-container.w3-teal
                address Gerado por Gestão de Alunos App