extends layout
block content
    .w3-container.w3-black
      h1.w3-center Gestão de Filmes
      .w3-card-4
        header.w3-container.w3-teal
          h2 Editar Filme
            .w3-container
              form.w3-container(action='/filmes/editar/' method='POST')
                  label.w3-teal
                    b Identificador
                  input.w3-input.w3-border.w3-grey(type='text' name='_id' value=filme._id readonly)
                  label.w3-teal
                    b Title
                  input.w3-input.w3-border.w3-light-grey(type='text' name='title' value=filme.title required)
                  label.w3-teal
                    b Year
                  input.w3-input.w3-border.w3-light-grey(type='text' name='year' value=filme.year required)
                  label.w3-teal
                    b Cast
                  input.w3-input.w3-border.w3-light-grey(type='text' name='cast' value=filme.cast)
                  label.w3-teal
                    b Genres
                  input.w3-input.w3-border.w3-light-grey(type='text' name='genres' value=filme.genres)
                  input.w3-btn.w3-blue-grey(type='submit' value='Enviar')
            footer.w3-container.w3-teal
                address Gerado por Gestão de Alunos App 
                    br
                    a(href="http://localhost:3000/filmes") Voltar à página inicial